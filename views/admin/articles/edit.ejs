<%- include('../../partials/header.ejs'); %>
    <%- include('../../partials/navbar.ejs'); %>


        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h1 class="display-5 text-success text-center">-Editar arquivo-</h1>
                </div>
                <div class="card-body">
                    <form method="post" class="form-group" action="/articles/update">
                        
                        <input class="form-control mb-2 " type="text" name="title" placeholder="Digite o titulo do arquivo">
                      <input type="hidden" name="" id="value<%= article.id %> ">
                        <textarea class="form-control" placeholder="Escreva o artigo aqui..." name="body" id="article" cols="30" rows="10"></textarea>
                       <label class="m-2 text-primary" for=""> <strong>selecione uma categoria</strong></label>
                       <select name="category" id="" class="form-control">
                          <% categories.forEach((category) => { %>

                            <% if (category.id == article.categoryId) { %>
                                <option value="<%= category.id %> "selected><%= category.title %> </option>
                             
                            <% }else{ %>
                                <option value="<%= category.id %> "><%= category.title %> </option>
                                <% } %> 
                          <% }) %> 
                       </select>
                       <br>
                       <button class=" mt-2 btn btn-primary">Atualizar</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="content" style="display: none;">
            <%- article.body %> 
        </div>






        <%-include('../../partials/footer.ejs'); %>
<script src="/tinymce/tinymce.min.js"></script>
        <script>
            language: 'pt_BR',
    tinymce.init({
        selector: '#article',
        plugins:[
            'advlist autolink link image lists print table emoctions paste  preview hr save searchreplace wordcount media  fuulscreen insertdatetime'
        ],
        init_instance_callback:() =>{
            tinymce.get("#article").setContent($('#content').html())
        }
        
    })


        </script>